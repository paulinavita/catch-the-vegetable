    <style>
        table {
        border-spacing: 1;
        border-collapse: collapse;
        border-radius: 6px;
        overflow: hidden;
        max-width: 800px;
        width: 10%;
        margin: 0 auto;
        position: relative;
        }
        table * {
        position: relative;
        }
        table td, table th {
        padding-left: 8px;
        }
        table thead tr {
        height: 60px;
        font-size: 16px;
        }
        table tbody tr {
        height: 48px;
        }
        table tbody tr:last-child {
        border: 0;
        }
        table td, table th {
